{
  "activationEvents": [],
  "categories": [
    "Azure"
  ],
  "contributes": {
    "commands": [
      {
        "command": "diagnostics-vscode.showAzureExtensions",
        "title": "Diagnostics: Show Azure Extensions"
      }
    ]
  },
  "description": "Information about extensions on the Azure portal",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.6.0",
    "@types/vscode": "^1.104.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "displayName": "diagnostics-vscode",
  "engines": {
    "vscode": "^1.104.0"
  },
  "main": "./dist/extension.js",
  "name": "diagnostics-vscode",
  "publisher": "joechung2008",
  "repository": {
    "type": "git",
    "url": "https://github.com/joechung2008/diagnostics-vscode.git"
  },
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./dist/tailwind.css",
    "check-types": "tsc --noEmit",
    "clean": "rimraf dist",
    "compile": "npm run clean && npm run check-types && npm run lint && node esbuild.js",
    "compile-tests": "node esbuild.test.js",
    "format": "prettier --write .",
    "lint": "eslint src",
    "package": "npm run clean && node esbuild.js --production",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "vscode-test",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest --watch",
    "vscode:prepublish": "npm run package",
    "watch": "npm-run-all -p watch:*",
    "watch-tests": "esbuild --watch",
    "watch:css": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./dist/tailwind.css --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json"
  },
  "type": "module",
  "version": "0.0.1"
}
